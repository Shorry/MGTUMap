<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_global"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    tools:context="com.example.android.mgtumap.MainActivity">

    <TextView
        android:id="@+id/tv_test_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />
    
    <com.example.android.mgtumap.MainMapView
        android:id="@+id/view_main_map"
        android:layout_below="@id/tv_test_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/b_zoom_in"
        android:layout_margin="8sp"
        android:layout_marginTop="4sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_button"
        android:src="@drawable/plus"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:alpha="0.8"
        android:layout_width="42sp"
        android:layout_height="42sp" />

    <ImageButton
        android:id="@+id/b_zoom_out"
        android:layout_margin="8sp"
        android:layout_marginBottom="4sp"
        android:layout_above="@id/b_zoom_in"
        android:layout_alignParentRight="true"
        android:background="@drawable/round_button"
        android:src="@drawable/minus"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:alpha="0.8"
        android:layout_width="42sp"
        android:layout_height="42sp" />

    <ImageButton
        android:id="@+id/b_path"
        android:layout_margin="8sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_button"
        android:src="@drawable/path"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:alpha="0.8"
        android:layout_width="42sp"
        android:layout_height="42sp" />

</RelativeLayout>
